<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#555555"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Did you enjoy our App ?"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.hsalf.smilerating.SmileRating
        android:id="@+id/ratingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dia"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:isIndicator="false" />


    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingView"
        android:layout_margin="5dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/edit_text_background"
        android:enabled="false"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:lines="2"
        android:padding="@dimen/margin_pre_medium"
        android:textColor="#555555"
        android:textCursorDrawable="@null"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/lastlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentEditText"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_backgrount_gradiant"
            android:clickable="true"
            android:text="EXIT"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_backgrount_gradiant"
            android:clickable="true"
            android:padding="5dp"
            android:text="NO"
            android:textColor="#555555"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
